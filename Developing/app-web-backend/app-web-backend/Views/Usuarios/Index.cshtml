@model IEnumerable<app_web_backend.Models.Usuario>

@{
    ViewData["Title"] = "Index";
}

<h1 class="text-light pt-5 pb-5">Usuários</h1>

<table class="table">
    <thead>
        <tr>
            <th class="text-light">
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th class="text-light">
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th class="text-light">
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th class="text-light">
                @Html.DisplayNameFor(model => model.Data_nasc)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Data_nasc)
            </td>
            <td>
                <a class="text-dark" asp-action="Edit" asp-route-id="@item.Id">Editar</a> |               
                <a class="text-dark" asp-action="Delete" asp-route-id="@item.Id">Excluir</a>
            </td>
        </tr>
}
    </tbody>
</table>
